---
import { Gift, Sparkles, Share2 } from 'lucide-react';
---

<section class="py-20 md:py-32 bg-gray-50" id="how-it-works">
  <div class="container mx-auto px-4 md:px-8 lg:px-16">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl mb-4 text-gray-900">
        How It Works
      </h2>
      <p class="text-xl text-gray-600">
        Creating your wishlist is as simple as 1-2-3
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 lg:gap-12">
      <!-- Step 1 -->
      <div class="relative">
        <div class="text-center space-y-4">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-[#4F46E5] text-white shadow-lg">
            <Gift className='size-10' />
          </div>
          <div class="absolute -top-2 left-1/2 -translate-x-1/2 w-12 h-12 bg-[#4F46E5] rounded-full flex items-center justify-center text-white text-xl -z-10 opacity-20">
            1
          </div>
          <h3 class="text-2xl text-gray-900 pt-4">
            Find gift you want
          </h3>
          <p class="text-gray-600">
            Explore ideas online and pick something youâ€™d truly love to receive as a gift.
          </p>
        </div>
        <!-- Connector line -->
        <div class="hidden md:block absolute top-10 left-[60%] w-full h-0.5 bg-gradient-to-r from-[#4F46E5] to-[#6366F1] opacity-30"></div>
      </div>

      <!-- Step 2 -->
      <div class="relative">
        <div class="text-center space-y-4">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-[#6366F1] text-white shadow-lg">
            <Sparkles className="size-10" />
          </div>
          <div class="absolute -top-2 left-1/2 -translate-x-1/2 w-12 h-12 bg-[#6366F1] rounded-full flex items-center justify-center text-white text-xl -z-10 opacity-20">
            2
          </div>
          <h3 class="text-2xl text-gray-900 pt-4">
            Insert link
          </h3>
          <p class="text-gray-600">
            Our AI automatically creates a beautiful description with all the details
          </p>
        </div>
        <!-- Connector line -->
        <div class="hidden md:block absolute top-10 left-[60%] w-full h-0.5 bg-gradient-to-r from-[#6366F1] to-[#4F46E5] opacity-30"></div>
      </div>

      <!-- Step 3 -->
      <div class="relative">
        <div class="text-center space-y-4">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-[#4F46E5] text-white shadow-lg">
            <Share2 className="size-10" />
          </div>
          <div class="absolute -top-2 left-1/2 -translate-x-1/2 w-12 h-12 bg-[#4F46E5] rounded-full flex items-center justify-center text-white text-xl -z-10 opacity-20">
            3
          </div>
          <h3 class="text-2xl text-gray-900 pt-4">
            Share Your Wishlist
          </h3>
          <p class="text-gray-600">
            Share with friends and family so they know exactly what you want
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
