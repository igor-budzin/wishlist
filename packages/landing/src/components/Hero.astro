---
import { Sparkles } from 'lucide-react';

const appUrl = import.meta.env.PUBLIC_APP_URL;
const loginUrl = `${appUrl}/login`;
---

<section class="relative overflow-hidden bg-gradient-to-br from-[#4F46E5] to-[#6366F1] text-white pt-32 md:pt-40">
  <div class="container mx-auto px-4 md:px-8 lg:px-16 py-20 md:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h1 class="text-5xl md:text-6xl lg:text-7xl tracking-tight">
          A Smarter Way to Keep Your Wishes
        </h1>
        <p class="text-xl md:text-2xl text-indigo-100">
          Save ideas in one place, share your wishes instantly, and make gifting easier than ever.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            href={loginUrl}
            class="bg-white text-[#4F46E5] hover:bg-gray-100 rounded-full px-8 text-lg h-10 inline-flex items-center justify-center font-medium transition-all"
          >
            Try it Free
          </a>
        </div>
      </div>
      <div class="relative">
        <!-- App Mockup Placeholder -->
        <div class="relative rounded-2xl overflow-hidden shadow-2xl bg-white p-4">
          <div class="bg-gray-100 rounded-xl aspect-video flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-br from-[#4F46E5] to-[#6366F1] rounded-2xl flex items-center justify-center">
                <Sparkles className="size-10 text-white" />
              </div>
              <p class="text-gray-600 text-lg">Wish Master App</p>
              <p class="text-gray-400 text-sm mt-2">Mockup Placeholder</p>
            </div>
          </div>
        </div>
        <div class="absolute -bottom-6 -left-6 w-40 h-40 bg-pink-400 rounded-full blur-3xl opacity-50"></div>
        <div class="absolute -top-6 -right-6 w-32 h-32 bg-yellow-400 rounded-full blur-3xl opacity-50"></div>
      </div>
    </div>
  </div>

  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z"
        fill="#F9FAFB"
      />
    </svg>
  </div>
</section>
