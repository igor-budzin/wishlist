// Prisma schema file for Wishlist application

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
  @@map("session")
}

model WishlistItem {
  id            String   @id @default(cuid())
  title         String
  description   String?
  url           String?
  priceAmount   Decimal?    // Exact price amount (e.g., 19.99)
  priceCurrency String?     // ISO 4217 currency code (e.g., USD, EUR, GBP)
  priority      Priority @default(MEDIUM)
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([userId, priceAmount])  // For future price filtering/sorting
  @@map("wishlist_items")
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  provider      String
  providerId    String
  avatar        String?
  wishlistItems WishlistItem[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@unique([provider, providerId])
  @@map("users")
}

enum Priority {
  LOW
  MEDIUM
  HIGH

  @@map("priority")
}
